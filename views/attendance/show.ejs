

<div class="container mt-4">
    <h2 class="text-center">Attendance Details</h2>

    <div class="card shadow p-4">
        <div class="mb-3">
            <strong>Employee Name:</strong>
            <p><%= attendance.employee.name %></p>
        </div>

        <div class="mb-3">
            <strong>Date:</strong>
            <p><%= attendance.date.toDateString() %></p>
        </div>

        <div class="mb-3">
            <strong>Check-in Time:</strong>
            <p><%= attendance.checkInTime || 'N/A' %></p>
        </div>

        <div class="mb-3">
            <strong>Check-out Time:</strong>
            <p><%= attendance.checkOutTime || 'N/A' %></p>
        </div>

        <div class="mb-3">
            <strong>Status:</strong>
            <% if (attendance.status === 'Present') { %>
                <span class="badge bg-success">Present</span>
            <% } else if (attendance.status === 'Late') { %>
                <span class="badge bg-warning">Late</span>
            <% } else { %>
                <span class="badge bg-danger">Absent</span>
            <% } %>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/attendance" class="btn btn-secondary">Back to Attendance List</a>
            <div>
                <a href="/attendance/<%= attendance._id %>/edit" class="btn btn-warning">Edit</a>
                <form action="/attendance/<%= attendance._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
