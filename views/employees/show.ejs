

<div class="container mt-4">
    <h2 class="text-center">Employee Details</h2>

    <div class="card shadow p-4">
        <div class="mb-3">
            <strong>Full Name:</strong>
            <p><%= employee.name %></p>
        </div>

        <div class="mb-3">
            <strong>Email:</strong>
            <p><%= employee.email %></p>
        </div>

        <div class="mb-3">
            <strong>Phone:</strong>
            <p><%= employee.phone %></p>
        </div>

        <div class="mb-3">
            <strong>Department:</strong>
            <p><%= employee.department %></p>
        </div>

        <div class="mb-3">
            <strong>Position:</strong>
            <p><%= employee.position %></p>
        </div>

        <div class="mb-3">
            <strong>Address:</strong>
            <p><%= employee.address %></p>
        </div>

        <div class="mb-3">
            <strong>Created At:</strong>
            <p><%= employee.createdAt %></p>
        </div>

        <div class="mb-3">
            <strong>Updated At:</strong>
            <p><%= employee.updatedAt %></p>
        </div>

        <div class="mb-3">
            <strong>Status:</strong>
            <p><%= employee.status %></p>
        </div>
        
        <div class="d-flex justify-content-between">
            <a href="/employees" class="btn btn-secondary">Back to Employee List</a>
            <div>
                <a href="/employees/<%= employee._id %>/edit" class="btn btn-warning">Edit</a>
                <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this attendance record?')">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
