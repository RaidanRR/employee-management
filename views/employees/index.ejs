<div class="container mt-4">
    <h2 class="text-center">Employee List</h2>

    

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/employees/create" class="btn btn-primary">Add New Employee</a>
        <form class="d-flex ms-auto" method="GET" action="/employees">
            <input type="text" name="search" class="form-control me-2" placeholder="Search employees..." value="<%= searchQuery || '' %>">
            <button type="submit" class="btn btn-secondary">Search</button>
        </form>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Position</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (employees.length > 0) { %>
                <% employees.forEach((employee, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= employee.name %></td>
                        <td><%= employee.email %></td>
                        <td><%= employee.phone %></td>
                        <td><%= employee.department %></td>
                        <td><%= employee.position %></td>
                        <td><%= employee.status %></td>
                        
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                              <a href="/employees/<%= employee._id %>" class="btn btn-info btn-sm">View</a>
                              <a href="/employees/<%= employee._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                              <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" style="margin: 0;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this attendance record?')">Delete</button>
                              </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No employees found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
